            <div class="form-group">
              <label for="comments">Comments</label>
              <input id="comments" type="comments" name="comments" placeholder="Comments" class="form-control">
            </div>
              <div class="input-group form-group">
           
                <div class="input-group-prepend">
                  <span class="input-group-text">Lat-Long</span>
                </div>
                
                <input name="lat" type="text" value="" class="form-control">
                <input name="lng" type="text" value="" class="form-control">
              </div>


              <div class="form-group">
                <select id="capacity" name="capacity" class="text-info">
                  <option value="small">Small</option>
                  <option value="Medium" selected>Medium</option>
                  <option value="Big">Big</option>
                </select>
              </div>
              <div class="form-group">

                <input type="submit" name="submit" class="btn btn-info btn-md" value="Create Bar">
              </div>

          </form>
          </div>
        </div>
      </div>
    </div>
  </div>


