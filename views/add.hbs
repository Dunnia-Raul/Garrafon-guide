      <div id="login-column" class="col-md-6">
        <div class="login-box col-md-12">
          <form action="/bars/add" method="POST" method="POST">
            <h3 class="text-center text-info">Add new Bar</h3>
            <div class="form-group">
              <label for="name">Bar:</label>
              <br>
              <input id="name" type="text" name="name" class="form-control">

            </div>
            <div class="form-group">
              <label for="zone">Zone</label>
              <select id="zone" name="zone" class="form-control">
                <option value="Austrias">Austrias</option>
                <option value="BLetras">Barrios de las Letras</option>
                <option value="BSalamanca">Barrio Salamanca</option>
                <option value="CasaCampo">Casa de CasaCampo</option>
                <option value="Castellana">Castellana</option>
                <option value="Chamberi">Chamberi</option>
                <option value="Chueca">Chueca</option>
                <option value="Sol">Sol-Gran Vía</option>
                <option value="Latina">Latina</option>
                <option value="Lavapies">Lavapiés</option>
                <option value="Princesa">Princesa</option>
                <option value="Sol">Sol</option>

              </select>
            </div>
            <div class="form-group">
              <label for="city">City</label>
              <input id="find" type="button" value="find">
              <input id="geocomplete" type="text" name="city" placeholder="Type in an address" value="" autocomplete="off" class="form-control">


