<h2>New Bar</h2>

<form action="/bars/add" method="POST" id="form-container">
  <label for="name">Bar</label>
  <input id="name" type="text" name="name" placeholder="Name of Bar">

  <br><br>

  <label for="zone">Zone</label>
  <input id="zone" type="zone" name="zone" placeholder="Zone">
  <br>
  <label for="city">City</label>
  <input id="city" type="city" name="city" placeholder="City">
  <br>
   <label for="comments">Comments</label>
  <input id="comments" type="comments" name="comments" placeholder="Comments">
  <br>
   <label for="capacity">Capacity</label>
  <input id="capacity" type="capacity" name="capacity" placeholder="capacity">
  <br>

  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Create Bar</button>

  </p>
</form>

