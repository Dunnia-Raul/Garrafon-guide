<!-- views/auth/signup.hbs -->
<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br>

  <label for="date">Birthday</label>
  <input id="date" type="date" name="date" placeholder="JonSnow">
<br>
  <label for="typeDrink">Favourite Drink</label>
  <input id="typeDrink" type="text" name="typeDrink" placeholder="JonSnow">
<br>
  <label for="email">email</label>
  <input id="email" type="text" name="email" placeholder="JonSnow">
  <br>
  <label for="city">City</label>
  <input id="city" type="text" name="city" placeholder="JonSnow">
  <br><br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>
