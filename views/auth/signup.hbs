<div id="SignUp">
    <div class="container">
        <div id="signup-row" class="row justify-content-center align-items-center">
            <div id="signup-column" class="col-md-6">
                <div class="signup-box col-md-12">

                    <form id="signup-form" action="/auth/signup" method="POST" >
                        <h3 class="text-center text-info">Sign Up</h3>
                        <div class="form-group">
                            <label for="username" class="text-info">Username:</label>
                            <input type="text" name="username" id="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Password:</label>
                            <input name="password" id="password" type="password" class="form-control">
                        </div>
                        <div class="form-group">
                          <label for="date" class="text-info">Birthday:</label>
                           <input id="date" type="date" name="date" class="form-control">
                        </div>
                        <div class="form-group">
                         <label for="typeDrink" class="text-info">Favourite Drink:</label>
                         <input id="typeDrink" type="text" name="typeDrink" class="form-control">
                        </div>
                        <div class="from-group">
                          <label for="email" class="text-info">Email:</label>
                        <input id="email" type="text" name="email" class="form-control">
                        </div>
                         
                        <div class="from-group">
                        <label for="city" class="text-info">City</label>
                        <input id="city" type="text" name="city" class="form-control">
                        </div>
                        {{#if message }}
                        <div class="error-message">{{ message }}</div>
                        {{/if}}
                        <div class="form-group">
                            
                            <button class="btn btn-info btn-md">sign up</button>
                        </div>
                      
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 
