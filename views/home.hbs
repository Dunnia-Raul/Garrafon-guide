<body>
    <!-- Container -->
    <section class="places">
        <div class="row">
            <!-- Column -->
            <div class="col-md-12 d-flex align-items-stretch">
                <!--Card-->
                {{#each places}}
                <div class="card">
                    <!--Card image-->
                    <div class="view overlay">
                        <a href="#">
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>
                    <!--Card content-->
                    <div class="card-body">
                        <!--Title-->
                        <h4 class="card-title">{{name}}</h4>
                        <!--Text-->
                        <p class="card-text">
                            <p>{{zone}}</p>
                            <p>{{city}} </p>
                            <p>{{#each commentes}}
                                <li>{{comments}}</li>
                                {{/each}}
                            </p>
                            <p>{{capacity}}</p>
                            <a href="/bars/{{_id}}" class="btn btn-outline-dark">Details</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    <section class="map">
        <div id="map" style="height:500px"></div>
        <script>
            window.placesAux = {{{placesAux}}};
        </script>
    </section>
</body>
